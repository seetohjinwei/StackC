def , dup . enddef

-- FizzBuzz from 1 to 100
def FIZZ_MAX 100 enddef -- using as a constant
1
while dup FIZZ_MAX <= then
  if dup 15 % 0 = then
    "FizzBuzz\n" print
  elseif dup 3 % 0 = then
    "Fizz\n" print
  elseif dup 5 % 0 = then
    "Buzz\n" print
  elseif 1 then
    , "\n" print
  end
  1 +
end
drop

